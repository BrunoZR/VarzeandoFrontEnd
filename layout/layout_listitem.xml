<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="220dp"
    android:layout_height="200dp"
    android:layout_margin="1dp"
    android:paddingRight="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagemQuadra"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/textQuadra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagemQuadra"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:text="Quadra1"
                android:textColor="@color/corVerdeMusgo"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/enderecoQuadra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textQuadra"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:paddingBottom="8dp"
                android:text="Avenida Miguel Conejo, Freguesia do Ã“"
                android:textColor="@color/corVerdeMusgo"
                android:textSize="16dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>